            <TextView
                android:id="@+id/textVisitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/text_Visitor"
                android:textColor="@color/balck1"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9dp"
                android:textStyle="bold"
                android:textColor="@color/light_deep"
                app:layout_constraintEnd_toStartOf="@+id/text_date0"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/Visitor_barChart"
                app:layout_constraintTop_toBottomOf="@+id/Visitor_barChart" />

            <TextView
                android:id="@+id/text_date0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
