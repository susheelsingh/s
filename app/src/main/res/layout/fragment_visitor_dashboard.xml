                android:textColor="@color/light_deep"
                app:layout_constraintBottom_toBottomOf="@+id/text_date0"
                app:layout_constraintEnd_toStartOf="@+id/text_DefvisitorCount"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/text_date0"
                app:layout_constraintTop_toTopOf="@+id/text_date0" />

            <TextView
                android:id="@+id/text_DefvisitorCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_deep"
                android:textSize="9dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/text_Date2"
                app:layout_constraintEnd_toStartOf="@+id/text_date4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/text_Date2"
                app:layout_constraintTop_toTopOf="@+id/text_Date2" />

            <TextView
                android:id="@+id/text_date4"
                android:layout_width="wrap_content"
