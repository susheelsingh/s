                android:textColor="@color/light_deep"
                app:layout_constraintBottom_toBottomOf="@+id/text_DefvisitorCount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/text_DefvisitorCount"
                app:layout_constraintTop_toTopOf="@+id/text_DefvisitorCount" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/Visitor_barChart"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/general_edt_box"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textVisitor">

            </com.github.mikephil.charting.charts.BarChart>


             <TextView
                 android:id="@+id/text_TypeVisitor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="1dp"
