                 android:textStyle="bold"
                 android:textSize="@dimen/medium_text_size"
                 android:textColor="@color/balck1"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toBottomOf="@+id/text_date" />
          <com.github.mikephil.charting.charts.BarChart
               android:id="@+id/TypeVisitor_barChart"
               android:layout_width="fill_parent"
               android:layout_height="0dp"
               android:layout_marginTop="1dp"
               android:background="@drawable/general_edt_box"
               app:layout_constraintDimensionRatio="w,1:1"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/text_TypeVisitor" />
             <TextView
                 android:id="@+id/text_DefaultVisitor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="1dp"
                 android:textSize="9dp"
                 android:textStyle="bold"
                 android:textColor="@color/light_deep"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toBottomOf="@+id/TypeVisitor_barChart" />

             <TextView
                 android:id="@+id/text_DeliveryVisitor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="1dp"
                 android:textSize="9dp"
                 android:textStyle="bold"
                 android:textColor="@color/light_deep"
                 app:layout_constraintEnd_toStartOf="@+id/text_TypeVisitor"
                 app:layout_constraintLeft_toRightOf="@+id/text_DefaultVisitor"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toBottomOf="@+id/TypeVisitor_barChart" />

             <TextView
                 android:id="@+id/text_InternalVisitor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="1dp"
                 android:textSize="9dp"
                 android:textStyle="bold"
                 android:textColor="@color/light_deep"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintLeft_toRightOf="@+id/text_DeliveryVisitor"
                 app:layout_constraintStart_toEndOf="@+id/text_TypeVisitor"
                 app:layout_constraintTop_toBottomOf="@+id/TypeVisitor_barChart" />


        </androidx.constraintlayout.widget.ConstraintLayout>
